<div class="container">
        <%= link_to 'Add New Product', new_product_path %>
        <br>
        <br>
        <table class="table table-bordered">
            </thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>In-Stock Quantity</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% @products.each do |product| %>
                <tbody>
                    <tr>
                        <td><%= product.title %></td>
                        <td><%= product.description %></td>
                        <td><%= product.price %>$</td>
                        <td><%= product.stock %></td>
                        <td><%= product.category_id %></td>
                        <td><%= product.brand_id %></td>
                        <td><img id="avatar" src="<%= product.avatar %>"></td>
                        <td><%= link_to 'Show', product_path(product) %></td>
                    </tr>
                </tbody>
            <% end %>
        </table>
</div>
<style>
    img{
        border-radius: 8px;
        border-radius: 4px;
        padding: 5px;
        width: 90px;
    }
</style>